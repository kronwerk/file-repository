@model TestWebApplication.Models.FileModel

<div class="filePage">

    <div class="row">
        <div class="col col-1">
            <h1>File</h1>
        </div>
    </div>

    <div class="row">
        <div class="col col-1">
            <ul class="menu top-menu">
                <li>
                    @Html.ActionLink("Personal", "PersonalPage")
                </li>
                <li>
                    @Html.ActionLink("Search", "Search")
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div id="linkkk" class="col col-3">
            @Html.ActionLink("Prev", "FilePage", new { id = (int)ViewBag.id - 1 })
        </div>
        <div id="justify" class="col col-3">
            <div text-align="center" class="row row-1">
                @Model.name
            </div>
            <div id="anch" class="row row-1">
                @if (Model.type == "text") {
                    @Url.Content(Model.content)
                }
                @if (Model.type == "video")
                {
                    <video id="example_video_1" class="video-js vjs-default-skin" preload="none" width="400" height="250" controls="controls">
                        <source src="@Url.Content(Model.content)" />
                    </video>
                }
                @if (Model.type == "img")
                {
                    <img src="@Url.Content(Model.content)" />
                }
                @if (Model.type == "audio")
                {
                    <audio src="@Model.content" type="audio/mpeg" controls></audio>
                }
            </div>
        </div>
        <div id="linkkk" class="col col-3">
            @Html.ActionLink("Next", "FilePage", new { id = (int)ViewBag.id + 1 })
        </div>
    </div>

